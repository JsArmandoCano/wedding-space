<style>
    section {
        position: relative;
        width: 100%;
        height: 200px;
        display: flex;
        background-color: #092240;
        overflow: hidden;
    }

    section .content__watts {
        flex: 1;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        z-index: 10;
    }
    
    section .content__watts h5 {
        font-size: 14px;
        text-align: center;
        color: #fff;
        margin: 0;
    }
    
    section .content__watts a {
        width: 60px;
        text-decoration: none;
    }
    
    section .content__watts a img {
        width: 100%;
    }
    
    section .content__watts p {
        font-size: 14px;
        color: #fff;
        text-align: center;
        margin: 0;
    }
    
    section .content__img {
        position: relative;
        width: 32%;
        height: 100%;
        background-image: url('../../public/assets/Contact/foto5.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        z-index: 10;
    }

    section .content__img .cape__watts {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background-color: rgba(9, 34, 64, 0.2);
    }

    section .nebu_1 {
        position: absolute;
        top: -70px;
        left: -40px;
        width: 150px;
        transform: rotate(45deg);
        z-index: 1;
    }

    section .nebu_2 {
        position: absolute;
        bottom: -65px;
        right: -40px;
        width: 150px;
        transform: rotate(25deg);
        z-index: 1;
    }
    
    section .star_1 {
        position: absolute;
        bottom: -60px;
        left: -90px;
        width: 200px;
        transform: rotate(-180deg);
        z-index: 1;
    }
    
    section .star_2 {
        position: absolute;
        top: -40px;
        right: 0;
        width: 200px;
        transform: rotate(-180deg);
        z-index: 1;
    }

    section > p {
        position: absolute;
        width: 100%;
        bottom: 10px;
        left: 50%;
        text-align: center;
        transform: translateX(-50%);
        color: #fff;
        margin: 0;
        font-size: 12px;
        z-index: 100;
    }

    @media (min-width: 576px) {
        section {
            height: 350px;
        }

        section .content__watts h5 {
            font-size: 24px;
        }
        
        section .content__watts a {
            width: 120px;
        }
        
        section .content__watts p {
            font-size: 24px;
        }
        
        section .nebu_1 {
            width: 250px;
        }

        section .nebu_2 {
            width: 250px;
        }
        
        section .star_1 {
            width: 300px;
        }
        
        section .star_2 {
            width: 300px;
        }

        section > p {
            font-size: 20px;
        }
    }

    @media (min-width: 1024px) {
        section {
            height: 100vh;
        }

        section .content__watts h5 {
            font-size: 40px;
        }
        
        section .content__watts a {
            width: 180px;
        }
        
        section .content__watts p {
            font-size: 36px;
        }
        
        section .nebu_1 {
            width: 350px;
        }

        section .nebu_2 {
            width: 350px;
        }
        
        section .star_1 {
            width: 400px;
        }
        
        section .star_2 {
            width: 400px;
        }

        section > p {
            font-size: 30px;
            bottom: 20px;
        }
    }
</style>


<script>
    import gsap from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    gsap.registerPlugin(ScrollTrigger);

    gsap.from('.text__animate7--fade', {
        scrollTrigger: {
            trigger: '.text__animate7--fade',
            start: 'top 60%',
            toggleActions: 'play none none none'
        },
        opacity: 0,
        x: -100,
        duration: 1,
        ease: 'power2.out',
        stagger: 0.2
    });

    gsap.from('.text__animate8--fade', {
        scrollTrigger: {
            trigger: '.text__animate8--fade',
            start: 'top 60%',
            toggleActions: 'play none none none'
        },
        opacity: 0,
        x: 100,
        duration: 1,
        ease: 'power2.out',
        stagger: 0.2
    });
</script>