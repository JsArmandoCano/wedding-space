<section>
    <div class="img__back">
        <img src="/assets/Banner/foto3.jpg" alt="Foto">
    </div>
    <div class="img__back">
        <img src="/assets/Banner/foto1.jpg" alt="Foto">
    </div>
    <div class="img__back">
        <img src="/assets/Banner/foto2.jpg" alt="Foto">
    </div>

    <img class="stars1" src="/assets/Header/3.png" alt="Estrella" />
    <img class="stars2" src="/assets/Header/3.png" alt="Estrella" />
    
    <div class="cape">
        <h5 class="text__animate1">Queremos que formes parte del inicio de este gran viaje.</h5>
    </div>
</section>


<style>
    section {
        position: relative;
        width: 100%;
        height: 200px;
        overflow: hidden;
        display: flex;
    }

    section .img__back {
        width: 33.33%;
        height: 100%;
        overflow: hidden;
    }

    section .img__back img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    section .img__back:nth-child(2) img {
        transform: scale(1.4);
    }

    section .stars1 {
        position: absolute;
        bottom: -40px;
        left: 0;
        width: 55%;
        opacity: 0.5;
    }

    section .stars2 {
        position: absolute;
        top: -40px;
        right: 0;
        width: 55%;
        opacity: 0.5;
        transform: rotateZ(180deg) rotateY(180deg);
    }

    section .cape {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(9, 34, 64, 0.3);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    section .cape h5 {
        font-size: 14px;
        color: #fff;
        text-align: center;
    }

    @media (min-width: 576px) {
        section {
            height: 350px;
        }

        section .cape h5 {
            font-size: 28px;
        }
    }

    @media (min-width: 1024px) {
        section {
            height: 80vh;
        }

        section .cape h5 {
            font-size: 45px;
        }
    }
</style>


<script>
    import gsap from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    gsap.registerPlugin(ScrollTrigger);

    gsap.fromTo('.text__animate1',
        { clipPath: 'inset(0 100% 0 0)', opacity: 0 },
        {
            clipPath: 'inset(0 0% 0 0)',
            opacity: 1,
            duration: 1.2,
            ease: 'power2.out',
            scrollTrigger: {
                trigger: '.text__animate1',
                start: 'top 80%',
                toggleActions: 'play none none none',
            }
        }
    );
</script>
