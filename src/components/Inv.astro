<section>
    <div class="content__inv">
        <div class="img">
            <div id="gift-4"></div>
        </div>
        <div class="invs">
            <h4>Tripulantes:</h4>
            <div class="inv" id="inv-list"></div>
            <h5 id="total"></h5>
        </div>
    </div>
</section>


<style>
    section {
        width: 100%;
        padding: 20px 0;
        display: flex;
        justify-content: center;
        overflow: hidden;
    }

    section .content__inv {
        width: 90%;
        display: flex;
    }

    section .content__inv .img {
        position: relative;
        width: 40%;
        height: 100%;
    }
    
    section .content__inv .img div {
        position: absolute;
        left: -10px;
        width: 100%;
        height: 100%;
        transform: scale(1.2);
    }
    
    section .content__inv .invs {
        width: 60%;
        height: 100%;
        background-color: #092240;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 5px 0;
    }

    section .content__inv .invs h4 {
        color: #8acbdf;
        font-size: 24px;
        margin: 0;
        padding-left: 15px;
        margin-bottom: 5px;
    }
    
    section .content__inv .invs .inv {
        width: 100%;
        padding-left: 15px;
        font-size: 18px;
        color: #fff;
    }
        
    section .content__inv .invs h5 {
        font-size: 18px;
        color: #fff;
        margin: 0;
        text-align: right;
        padding-right: 15px;
    }

    @media (min-width: 576px) {
        section {
            padding: 40px 0;
        }
        
        section .content__inv .invs h4 {
            font-size: 36px;
        }
                
        section .content__inv .invs .inv {
            font-size: 28px;
        }
        
        section .content__inv .invs h5 {
            font-size: 30px;
        }
    }

    @media (min-width: 1024px) {
        section {
            margin-bottom: 25px;
        }

        section .content__inv .invs {
            padding: 15px 0;
        }

        section .content__inv .invs h4 {
            font-size: 48px;
            padding-left: 30px;
        }
        
        section .content__inv .invs .inv {
            font-size: 34px;
            padding-left: 30px;
        }
        
        section .content__inv .invs h5 {
            font-size: 36px;
            padding-right: 30px;
        }
    }
</style>

<script>
    import Lottie from "lottie-web";

    const container4 = document.getElementById('gift-4');
    if (container4) {
        Lottie.loadAnimation({
            container: container4,
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: '/assets/Inv/SpaceMan.json',
        });
    }

    import invData from "../data/invData.json";

    const params = new URLSearchParams(window.location.search);
    const name = params.get('name');
    const jsonInv = invData.find(item => item.url === name);

    const invList = document.getElementById('inv-list');
    const totalEl = document.getElementById('total');

    if (jsonInv && invList && totalEl) {
        jsonInv.inv.forEach(invs => {
            const p = document.createElement('p');
            p.textContent = invs;
            p.style.margin = '0';
            invList.appendChild(p);
        });

        totalEl.textContent = `Total: ${jsonInv.inv.length}`;
    }
</script>