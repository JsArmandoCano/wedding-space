<section>
    <img class="star" src="/assets/Header/3.png" alt="Estrellas">
    <img class="rocket" src="/assets/Banner2/8-5.png" alt="Cohete">

    <div class="cape__banner2">
        <p class="text__animate6">Â¡Esperamos contar con tu valiosa presencia!</p>
    </div>
</section>


<style>
    section {
        position: relative;
        width: 100%;
        height: 240px;
        background-image: url('../../public/assets/Banner2/foto4.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }

    section .star {
        position: absolute;
        top: 0;
        left: -40px;
        height: 100%;
        transform: rotate(90deg);
    }

    section .rocket {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 70px;
    }

    section .cape__banner2 {
        width: 100%;
        height: 100%;
        background-color: rgba(9, 34, 64, 0.2);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    section .cape__banner2 p {
        width: 90%;
        font-size: 18px;
        color: #fff;
        text-align: center;
        margin: 0;
    }

    @media (min-width: 576px) {
        section {
            height: 350px;
        }

        section .rocket {
            width: 150px;
        }

        section .cape__banner2 p {
            font-size: 28px;
        }   
    }

    @media (min-width: 1024px) {
        section {
            height: 75vh;
        }

        section .rocket {
            width: 250px;
        }

        section .cape__banner2 p {
            font-size: 38px;
        } 
    }
</style>


<script>
    import gsap from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    gsap.registerPlugin(ScrollTrigger);

    gsap.fromTo('.text__animate6',
        { clipPath: 'inset(0 100% 0 0)', opacity: 0 },
        {
            clipPath: 'inset(0 0% 0 0)',
            opacity: 1,
            duration: 1.2,
            ease: 'power2.out',
            scrollTrigger: {
                trigger: '.text__animate6',
                start: 'top 80%',
                toggleActions: 'play none none none',
            }
        }
    );
</script>