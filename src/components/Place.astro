<style>
    section {
        position: relative;
        width: 100%;
        padding: 30px 0;
        background-color: #092240;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    section h3 {
        font-size: 28px;
        text-align: center;
        color: #8acbdf;
        margin: 0;
        margin-bottom: 30px;
        z-index: 10;
    }

    section .place__text {
        position: relative;
        width: 70%;
        height: 70px;
        background-color: rgba(255, 255, 255, 0.6);
        border-radius: 10px;
        margin-left: 25px;
        display: flex;
        align-items: center;
        padding: 0 10px;
        z-index: 10;
    }

    section .place__text div {
        position: absolute;
        width: 150px;
        top: 50%;
        left: -50px;
        transform: translateY(-50%);
    }

    section .place__text a {
        font-size: 18px;
        color: #fff;
        padding-left: 75px;
    }

    section h4 {
        width: 80%;
        font-size: 22px;
        text-align: center;
        color: #8acbdf;
        margin: 50px 0 0 0;
        z-index: 10;
    }

    section .place__communication {
        position: relative;
        width: 100%;
        display: flex;
        justify-content: center;
        padding-left: 30px;
        z-index: 10;
        margin-top: -10px;
    }

    section .place__communication img {
        width: 200px;
        margin-top: 15px;
        padding-right: 25px;
    }

    section .place__communication #gift-3 {
        position: absolute;
        bottom: -60px;
        right: 5px;
        width: 180px;
    }

    section .place__communication .content {
        position: absolute;
        top: 20px;
        left: 51%;
        transform: translateX(-51%);
        width: 180px;
        height: 150px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 5px;
    }

    section .place__communication .content p {
        font-size: 20px;
        color: #092240;
        text-align: center;
        margin: 0;
    }

    section .nebu1 {
        position: absolute;
        width: 200px;
        top: -20px;
        left: -70px;
        z-index: 1;
        transform: rotate(-25deg);
    }

    section .nebu2 {
        position: absolute;
        width: 200px;
        bottom: -25px;
        right: -85px;
        z-index: 1;
        transform: rotate(-30deg);
    }

    section .star1 {
        position: absolute;
        width: 220px;
        top: 0;
        right: -40px;
        transform: rotateX(180deg) rotate(-90deg);
        z-index: 1;
    }

    section .star2 {
        position: absolute;
        width: 220px;
        bottom: 0;
        left: -40px;
        transform: rotate(-90deg);
        z-index: 1;
    }
</style>


<script>
    import Lottie from "lottie-web";

    const container2 = document.getElementById('gift-2');
    if (Lottie && container2) {
        Lottie.loadAnimation({
            container: container2,
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: '/assets/Place/Earth.json',
        });
    }

    const container3 = document.getElementById('gift-3');
    if (Lottie && container3) {
        Lottie.loadAnimation({
            container: container3,
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: '/assets/Place/Astronaut.json',
        });
    }
</script>