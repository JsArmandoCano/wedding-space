<section>
    <h3>Lugar</h3>
    <div class="place__text">
        <div id="gift-2"></div>
        <a href="https://maps.app.goo.gl/YwkkTxqxsaiY8Dg7A" target="_blank">Virginia 125, Col. Nativitas, Benito Juárez</a>
    </div>
    
    <h4>COMUNICADO DE ALTA IMPORTANCIA:</h4>
    <div class="place__communication">
        <img src="/assets/Place/paper.png" alt="Papel">
        <div class="content">
            <div id="gift-3"></div>
            <p>Después de la ceremonia,</p>
            <p>NO habrá recepción</p>
        </div>
    </div>

    <img class="nebu1 img__animate1--fade" src="/assets/Header/2.png" alt="Nebulosa">
    <img class="nebu2 img__animate2--fade" src="/assets/Header/2.png" alt="Nebulosa">
    <img class="star1 img__animate1--fade" src="/assets/Header/3.png" alt="Estrellas">
    <img class="star2 img__animate2--fade" src="/assets/Header/3.png" alt="Estrellas">
</section>


<style>
    section {
        position: relative;
        width: 100%;
        padding: 30px 0;
        background-color: #092240;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    section h3 {
        font-size: 28px;
        text-align: center;
        color: #8acbdf;
        margin: 0;
        margin-bottom: 30px;
        z-index: 10;
    }

    section .place__text {
        position: relative;
        width: 70%;
        height: 70px;
        background-color: rgba(255, 255, 255, 0.6);
        border-radius: 10px;
        margin-left: 25px;
        display: flex;
        align-items: center;
        padding: 0 10px;
        z-index: 10;
    }

    section .place__text div {
        position: absolute;
        width: 150px;
        top: 50%;
        left: -50px;
        transform: translateY(-50%);
    }

    section .place__text a {
        font-size: 18px;
        color: #fff;
        padding-left: 75px;
    }

    section h4 {
        width: 80%;
        font-size: 22px;
        text-align: center;
        color: #8acbdf;
        margin: 50px 0 0 0;
        z-index: 10;
    }

    section .place__communication {
        position: relative;
        width: 100%;
        display: flex;
        justify-content: center;
        padding-left: 30px;
        z-index: 10;
        margin-top: -10px;
    }

    section .place__communication img {
        width: 200px;
        margin-top: 15px;
        padding-right: 25px;
    }

    section .place__communication .content {
        position: absolute;
        top: 20px;
        left: 51%;
        transform: translateX(-51%);
        width: 180px;
        height: 150px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 5px;
    }
    
    section .place__communication .content #gift-3 {
        position: absolute;
        bottom: -80px;
        right: -95px;
        width: 180px;
    }

    section .place__communication .content p {
        font-size: 20px;
        color: #092240;
        text-align: center;
        margin: 0;
    }

    section .nebu1 {
        position: absolute;
        width: 200px;
        top: -20px;
        left: -70px;
        z-index: 1;
        transform: rotate(-25deg);
    }

    section .nebu2 {
        position: absolute;
        width: 200px;
        bottom: -25px;
        right: -85px;
        z-index: 1;
        transform: rotate(-30deg);
    }

    section .star1 {
        position: absolute;
        width: 220px;
        top: 0;
        right: -40px;
        transform: rotateX(180deg) rotate(-90deg);
        z-index: 1;
    }

    section .star2 {
        position: absolute;
        width: 220px;
        bottom: 0;
        left: -40px;
        transform: rotate(-90deg);
        z-index: 1;
    }

    @media (min-width: 576px) {
        section {
            padding: 40px 0;
        }

        section h3 {
            font-size: 40px;
        }

        section .place__text {
            width: 50%;
            height: 100px;
        }

        section .place__text div {
            width: 200px;
            left: -70px;
        }

        section .place__text a {
            font-size: 24px;
            padding-left: 100px;
        }

        section h4 {
            width: 50%;
            font-size: 28px;
        }

        section .place__communication {
            margin-top: 0;
        }

        section .place__communication img {
            width: 250px;
        }

        section .place__communication .content {
            left: 50%;
            transform: translateX(-50%);
            width: 220px;
            height: 190px;
        }
        
        section .place__communication .content #gift-3 {
            bottom: -100px;
            right: -120px;
            width: 220px;
        }

        section .place__communication .content p {
            font-size: 25px;
        }

        section .nebu1 {
            width: 300px;
        }

        section .nebu2 {
            width: 300px;
        }

        section .star1 {
            width: 320px;
        }

        section .star2 {
            width: 320px;
        }
    }

    @media (min-width: 1024px) {
        section {
            padding: 50px 0;
        }

        section h3 {
            font-size: 60px;
        }

        section .place__text {
            width: 40%;
            height: 120px;
        }

        section .place__text div {
            width: 240px;
            left: -80px;
        }

        section .place__text a {
            font-size: 30px;
            padding-left: 120px;
        }

        section h4 {
            width: 40%;
            font-size: 38px;
        }

        section .place__communication img {
            width: 320px;
        }

        section .place__communication .content {
            width: 280px;
            height: 250px;
        }
        
        section .place__communication .content #gift-3 {
            bottom: -110px;
            right: -160px;
            width: 280px;
        }

        section .place__communication .content p {
            font-size: 34px;
        }

        section .nebu1 {
            width: 500px;
            top: -90px;
            left: -140px;
        }

        section .nebu2 {
            width: 500px;
            bottom: -120px;
            right: -180px;
        }

        section .star1 {
            width: 450px;
            right: -80px;
        }
        
        section .star2 {
            width: 450px;
            left: -80px;
        }
    }
</style>


<script>
    import Lottie from "lottie-web";

    const container2 = document.getElementById('gift-2');
    if (Lottie && container2) {
        Lottie.loadAnimation({
            container: container2,
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: '/assets/Place/Earth.json',
        });
    }

    const container3 = document.getElementById('gift-3');
    if (Lottie && container3) {
        Lottie.loadAnimation({
            container: container3,
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: '/assets/Place/Astronaut.json',
        });
    }

    import gsap from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    gsap.registerPlugin(ScrollTrigger);

    gsap.from('.img__animate1--fade', {
        scrollTrigger: {
            trigger: '.img__animate1--fade',
            start: 'top 80%',
            toggleActions: 'play none none none'
        },
        opacity: 0,
        x: -100,
        duration: 1,
        ease: 'power2.out',
        stagger: 0.2
    });

    gsap.from('.img__animate2--fade', {
        scrollTrigger: {
            trigger: '.img__animate2--fade',
            start: 'top 80%',
            toggleActions: 'play none none none'
        },
        opacity: 0,
        x: 100,
        duration: 1,
        ease: 'power2.out',
        stagger: 0.2
    });
</script>